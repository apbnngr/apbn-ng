---
import { Constants } from "~/types";
import Layout from "../layouts/Layout.astro";
import HeroSection from "~/components/partials/HeroSection.astro"

const keywords = [
  "contact"
]
const title = `Contact | ${Constants.SITENAME}`
---
<Layout title={title} keywords={keywords}>
  <HeroSection
    header="Contact Us"
    showCta={false}
    subline="You are indeed welcome to contact us at any time and for any reason you think we can provide our professional opinion. Simply send us a mail using the form below." />
</Layout> 