---
import HeroSection from "~/components/partials/HeroSection.astro";
import Layout from "../layouts/Layout.astro";

const keywords = [
  "privacy",
  "Terms of Use"
]
const title = "Terms of Use | APBN"
---

<Layout title={title} keywords={keywords}>
  <HeroSection
    header="Terms of Use"
    showCta={false}
    subline="Guidelines for Using APBN's Website Responsibly and Effectively" />
