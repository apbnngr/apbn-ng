---
import CopyButton from "./CopyButton.astro";

interface Props {
  key: string;
  value: string;
  title?: string;
}

const { key, value, title } = Astro.props as Props
const className = title ? `bt-${title}` :  ''
---

<div class="flex flex-col justify-start items-start w-full md:gap-2 relative">
  <p class="-key">{key}</p>
  <div class="flex justify-between items-center w-full bg-gray-200 dark:bg-gray-900 p-2 rounded-lg">
    <p class="-value">{value}</p>
    <CopyButton className={className} />
  </div>
</div>