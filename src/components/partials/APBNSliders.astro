---
import { getCollection, type CollectionEntry } from "astro:content";
import { Constants } from "~/types";
import { Image } from "astro:assets"

const allSliders: CollectionEntry<"sliders">[] = await getCollection("sliders")
const slider = allSliders
.filter(slider => slider.data.active)
.filter(slider => slider.data.type === Constants.APBN)[0]

---

{
  slider && (
    <section>
      <div class="rounded-lg center grid grid-cols-1 md:grid-cols-2 gap-2 overflow-hidden">
        <Image
          width={1326}
          height={602}
          class="w-full object-center aspect-[1326/602] md:aspect-[1920/400]"
          src={slider.data.image}
          alt={slider.data.name}
          format="webp"
        />
        <div>details</div>
      </div>
    </section>
  )
}