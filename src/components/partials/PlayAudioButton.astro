---
import type { CollectionEntry } from 'astro:content';
import { btClasses } from '~/lib';

export interface Props {
  event: CollectionEntry<"events">;
}

const { event } = Astro.props
const label = event.data.title + " download button"
const classes = btClasses
.filter(className => className !== "bg-white")
.filter(className => className !== "dark:bg-gray-700")
.filter(className => className !== "shadow-rcn")
classes.push("bt-orange")

---

<button aria-label={label} class:list={classes}>
  <span class="-clickable" data-name="play audio" data-event={JSON.stringify(event.data)}></span> 
  <svg viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6 sm:w-4 sm:h-4">
    <path d="M8.25 4.5a3.75 3.75 0 117.5 0v8.25a3.75 3.75 0 11-7.5 0V4.5z" />
    <path d="M6 10.5a.75.75 0 01.75.75v1.5a5.25 5.25 0 1010.5 0v-1.5a.75.75 0 011.5 0v1.5a6.751 6.751 0 01-6 6.709v2.291h3a.75.75 0 010 1.5h-7.5a.75.75 0 010-1.5h3v-2.291a6.751 6.751 0 01-6-6.709v-1.5A.75.75 0 016 10.5z" />
  </svg>
  
</button> 