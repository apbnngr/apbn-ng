---
import type { CollectionEntry } from 'astro:content';
import { btnClasses } from '~/lib';

export interface Props {
  sermon: CollectionEntry<"sermons">;
}

const { sermon } = Astro.props
const label = sermon.data.title + " read button"

const classes = btnClasses
.filter(className => className !== "bg-white")
.filter(className => className !== "dark:bg-gray-700")
.filter(className => className !== "shadow-rcn")
classes.push("btn-orange")

---

<a href={`/sermons/${sermon.slug}`} aria-label={label} class:list={classes}>
  <span class="-clickable" data-name="read"></span>
  <svg fill="currentColor" viewBox="0 0 512 512" class="w-6 h-6 sm:w-4 sm:h-4"><path d="M352 96c0-53.02-42.98-96-96-96s-96 42.98-96 96 42.98 96 96 96 96-42.98 96-96zM233.59 241.1c-59.33-36.32-155.43-46.3-203.79-49.05C13.55 191.13 0 203.51 0 219.14v222.8c0 14.33 11.59 26.28 26.49 27.05 43.66 2.29 131.99 10.68 193.04 41.43 9.37 4.72 20.48-1.71 20.48-11.87V252.56c-.01-4.67-2.32-8.95-6.42-11.46zm248.61-49.05c-48.35 2.74-144.46 12.73-203.78 49.05-4.1 2.51-6.41 6.96-6.41 11.63v245.79c0 10.19 11.14 16.63 20.54 11.9 61.04-30.72 149.32-39.11 192.97-41.4 14.9-.78 26.49-12.73 26.49-27.06V219.14c-.01-15.63-13.56-28.01-29.81-27.09z"></path></svg>
</a> 