---
import ButtonLink from "./ButtonLink.astro";
import DetailField from "./DetailField.astro";

const keyValuePairs = [
  { key: 'Account Name:', value: 'Remnant Christian Network Ministry' },
  { key: 'Bank Name:', value: 'First Bank PLC' },
  { key: 'NGN:', value: '2031730750' },
  { key: 'USD:', value: '2031730183' },
  { key: 'GBP:', value: '2031730217' },
  { key: 'EUR:', value: '2031730200' },
]
---

<div class="w-full flex flex-col items-center gap-2 paper p-2 rounded-md shadow-rcn">
  <h2 class="title text-center">Account Details</h2>
  {
    keyValuePairs.slice(0,2).map(keyval => <DetailField key={keyval.key} value={keyval.value} />)
  }
  <div class="grid grid-cols-1 md:grid-cols-2 gap-2 w-full">
    {
      keyValuePairs.slice(2,6).map(keyval => <DetailField key={keyval.key} value={keyval.value} />)
    }
  </div>
  <ButtonLink className="btn btn-orange dark:btn-white md:w-fit w-full" href="/give" type="link" title="give" />
</div>