---
export interface Props {
  classes?: string;
  date: Date;
}

const { classes, date } = Astro.props
const defaultClasses = "grid grid-flow-col gap-2 text-center auto-cols-max"
const className = defaultClasses + " " + classes
---

<div class={className}> 
  <div class="flex flex-col p-1 rounded-lg bg-white dark:bg-darker shadow-custom">
    <span class="countdown text-xl font-semibold">
      <span style="--value:15;" data-digit="days" class="relative"></span>
    </span>
    days
  </div> 
  <div class="flex flex-col p-1 rounded-lg bg-white dark:bg-darker shadow-custom">
    <span class="countdown text-xl font-semibold">
      <span style="--value:10;" data-digit="hours" class="relative"></span>
    </span>
    hours
  </div> 
  <div class="flex flex-col p-1 rounded-lg bg-white dark:bg-darker shadow-custom">
    <span class="countdown text-xl font-semibold">
      <span style="--value:24;" data-digit="minutes" class="relative"></span>
    </span>
    min
  </div> 
  <div class="flex flex-col p-1 rounded-lg bg-white dark:bg-darker shadow-custom">
    <span class="countdown text-xl font-semibold">
      <span style="--value:49;" data-digit="seconds"  data-date={new Date(date).toLocaleString()} class="relative"></span> 
    </span>
    sec
  </div>
</div>

