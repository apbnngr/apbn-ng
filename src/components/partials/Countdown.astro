---
export interface Props {
  classes?: string;
  date: Date;
}

const { classes, date } = Astro.props
const defaultClasses = "grid grid-flow-col gap-5 text-center auto-cols-max"
const className = defaultClasses + " " + classes
---

<div class={className}> 
  <div class="flex flex-col p-2 bg-neutral rounded-box text-neutral-content">
    <span class="countdown font-mono text-5xl">
      <span style="--value:15;" aria-digit="days"></span>
    </span>
    days
  </div> 
  <div class="flex flex-col p-2 bg-neutral rounded-box text-neutral-content">
    <span class="countdown font-mono text-5xl">
      <span style="--value:10;" aria-digit="hours"></span>
    </span>
    hours
  </div> 
  <div class="flex flex-col p-2 bg-neutral rounded-box text-neutral-content">
    <span class="countdown font-mono text-5xl">
      <span style="--value:24;" aria-digit="minutes"></span>
    </span>
    min
  </div> 
  <div class="flex flex-col p-2 bg-neutral rounded-box text-neutral-content">
    <span class="countdown font-mono text-5xl">
      <span style="--value:49;" aria-digit="seconds"  data-date={new Date(date).toLocaleString()}></span> 
    </span>
    sec
  </div>
</div>

