---
import ButtonLink from "../partials/ButtonLink.astro";
import WhiteLogo from "../icons/WhiteLogo.astro";
import { links } from "~/lib";
import FollowUsLinks from "../partials/FollowUsLinks.astro";

---

<footer class="w-full -footer bg-darklight text-white" aria-label="footer" role="contentinfo">
  <div class="center flex flex-col gap-4">
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4 md:gap-2">
      <div class="flex items-start flex-col gap-2">
        <WhiteLogo/>
        <div class="flex flex-col justify-start items-start">
          <div class="flex justify-center items-center gap-2">
            <a href="tel:+2348129962551" aria-label="call us on line 1" class="-phone flex justify-center items-center gap-1">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-4 h-4">
                <path fill-rule="evenodd" d="M1.5 4.5a3 3 0 013-3h1.372c.86 0 1.61.586 1.819 1.42l1.105 4.423a1.875 1.875 0 01-.694 1.955l-1.293.97c-.135.101-.164.249-.126.352a11.285 11.285 0 006.697 6.697c.103.038.25.009.352-.126l.97-1.293a1.875 1.875 0 011.955-.694l4.423 1.105c.834.209 1.42.959 1.42 1.82V19.5a3 3 0 01-3 3h-2.25C8.552 22.5 1.5 15.448 1.5 6.75V4.5z" clip-rule="evenodd" />
              </svg>
              <span>Call Us</span>
            </a>
          </div>
        </div>
        <a href="mailto:info@apbn.org.ng?subject=Inquiries" aria-label="send us an email" class="-email flex justify-center items-center gap-1">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-4 h-4">
            <path d="M1.5 8.67v8.58a3 3 0 003 3h15a3 3 0 003-3V8.67l-8.928 5.493a3 3 0 01-3.144 0L1.5 8.67z" />
            <path d="M22.5 6.908V6.75a3 3 0 00-3-3h-15a3 3 0 00-3 3v.158l9.714 5.978a1.5 1.5 0 001.572 0L22.5 6.908z" />
          </svg>          
          <span>Send us an email</span>
        </a>
        <FollowUsLinks />
        <ButtonLink className="bt bt-white py-2 px-4 w-fit text-center" title="join us" href="/register" type="link" />
      </div>
      <div class="flex items-start flex-col">
        <p class="uppercase font-semibold underline">{links.usefullinks.name}</p>
        {
          links.usefullinks.submenu.map(menu => {
            const className = "p-2 pl-0 md:p-1 md:pl-0 w-full"
            return <a href={menu.url} class={className} aria-label={menu.arialabel}>{menu.name}</a>
          })
        }
      </div>
    </div>
    <hr>
    <div class="flex items-center justify-start">
      Â©&nbsp;<span id="year"></span>&nbsp;APBN. All Rights Reserved.
    </div>
  </div>
</footer>
